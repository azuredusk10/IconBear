<?xml version="1.0" encoding="utf-8"?>
<interface>
  <template class="IcoDetailsPanel">
    <property name="layout-manager">
			<object class="GtkBoxLayout">
				<property name="orientation">vertical</property>
			</object>
		</property>
    <!-- No icon selected view -->
    <child>
      <object class="GtkBox">
        <property name="visible" bind-source="IcoDetailsPanel" bind-property="iconIsSelected" bind-flags="invert-boolean" />
        <property name="orientation">vertical</property>
        <property name="vexpand">true</property>
        <child>
          <object class="GtkScrolledWindow">
          <property name="vexpand">true</property>
          <property name="min-content-width">250</property>
          <property name="max-content-width">300</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <property name="margin-top">16</property>
                <property name="margin-bottom">16</property>
                <child>
                  <object class="GtkFrame">
                    <property name="width-request">172</property>
                    <property name="height-request">172</property>
                    <property name="margin-bottom">24</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="true">Select an icon</property>
                        <property name="opacity">0.7</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" bind-source="IcoDetailsPanel" bind-property="setName" bind-flags="sync-create"/>
                    <property name="halign">1</property>
                    <property name="margin-bottom">8</property>
                    <style>
                      <class name="title-3"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="icons_count">
                    <property name="halign">1</property>
                    <property name="margin-bottom">4</property>
                    <style>
                    </style>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label" bind-source="IcoDetailsPanel" bind-property="setLicense" bind-flags="sync-create"/>
                    <property name="halign">1</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
          </child>
      </object>
    </child>

    <!-- Icon selected view -->
    <child>
      <object class="GtkBox">
        <property name="visible" bind-source="IcoDetailsPanel" bind-property="iconIsSelected" />
        <property name="orientation">vertical</property>
        <property name="vexpand">true</property>
        <child>
          <object class="GtkScrolledWindow">
          <property name="vexpand">true</property>
          <property name="min-content-width">250</property>
          <property name="max-content-width">300</property>

        <!-- <child>
          <object class="GtkLabel">
            <property name="label">Icon name</property>
            <property name="valign">1</property>
            <property name="margin-top">8</property>
            <property name="margin-bottom">24</property>
            <style>
              <class name="title-4"/>
            </style>
          </object>
        </child> -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <property name="margin-top">16</property>
                <property name="margin-bottom">16</property>
                <child>
                  <object class="GtkFrame">
                    <property name="width-request">172</property>
                    <property name="height-request">172</property>
                    <property name="margin-bottom">24</property>
                    <child>
                      <object class="GtkDrawingArea" id="preview_image">
                        <property name="margin-top">24</property>
                        <property name="margin-bottom">24</property>
                        <property name="margin-start">24</property>
                        <property name="margin-end">24</property>
                        <style>
                          <class name="icon-grid__image" />
                        </style>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkListBox">
                    <property name="selection-mode">none</property>
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Name</property>
                        <property name="subtitle" bind-source="IcoDetailsPanel" bind-property="iconLabel" bind-flags="sync-create"/>
                        <property name="subtitle-selectable">True</property>
                        <style>
                          <class name="property"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="AdwExpanderRow">
                        <property name="title" translatable="true">Tags</property>
                        <property name="subtitle">weather, sky, cloudy</property>
                        <style>
                          <class name="property"/>
                        </style>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">weather</property>
                            <child type="suffix">
                              <object class="GtkButton">
                                <property name="icon-name">edit-delete-symbolic</property>
                                <property name="valign">3</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">sky</property>
                            <child type="suffix">
                              <object class="GtkButton">
                                <property name="icon-name">edit-delete-symbolic</property>
                                <property name="valign">3</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">cloudy</property>
                            <child type="suffix">
                              <object class="GtkButton">
                                <property name="icon-name">edit-delete-symbolic</property>
                                <property name="valign">3</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwEntryRow">
                            <property name="title" translatable="true">Add a tag</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <!--
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Color</property>
                        <child>
                          <object class="GtkColorDialogButton" id="color_dialog_button">
                            <property name="valign">3</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    -->
                    <!-- This wouldn't work for a resource file, only for a file in the data directory.
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Filename</property>
                        <property name="subtitle">Filename.svg</property>
                        <child type="suffix">
                          <object class="GtkButton">
                            <property name="icon-name">folder-open-symbolic</property>
                            <property name="valign">3</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child> -->
                    <child>
                      <object class="AdwActionRow" id="icon_size_row">
                        <property name="title" translatable="yes">Original size (px)</property>
                        <property name="subtitle-selectable">True</property>
                        <style>
                          <class name="property"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <style>
              <class name="detailsPanelActionBox"/>
            </style>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">8</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <property name="margin-top">16</property>
                <property name="margin-bottom">16</property>
                <!--
                <child>
                  <object class="AdwSplitButton">
                    <property name="menu-model">icon_details_export_menu</property>
                    <style>
                      <class name="flat"/>
                    </style>
                    <child>
                      <object class="AdwButtonContent">
                        <property name="label" translatable="true">Export as SVG</property>
                        <property name="icon-name">document-save-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
                -->
                <!--
                <child>
                  <object class="AdwSplitButton">
                    <property name="menu-model">icon_details_copy_menu</property>
                    <signal name="clicked" handler="onCopyButtonClicked" />
                    <style>
                      <class name="suggested-action"/>
                    </style>
                    <child>
                      <object class="AdwButtonContent">
                        <property name="label" translatable="true">Copy as SVG</property>
                        <property name="icon-name">edit-copy-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
                -->
                <child>
                  <object class="GtkButton">
                    <property name="child">
                      <object class="AdwButtonContent">
                        <property name="label" translatable="true">Copy as SVG</property>
                        <property name="icon-name">edit-copy-symbolic</property>
                      </object>
                    </property>
                    <signal name="clicked" handler="onCopyButtonClicked"/>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

    <menu id="icon_details_copy_menu">
      <section>
        <item>
          <attribute name="label">Copy as PNG</attribute>
        </item>
        <item>
          <attribute name="label">Copy as JPG</attribute>
        </item>
      </section>
    </menu>
    <menu id="icon_details_export_menu">
      <section>
        <item>
          <attribute name="label">Export as PNG</attribute>
        </item>
        <item>
          <attribute name="label">Export as JPG</attribute>
        </item>
      </section>
    </menu>
  </template>
</interface>
