<?xml version="1.0" encoding="utf-8"?>
<interface>
  <template class="IcoMainPanelView">
    <property name="layout-manager">
			<object class="GtkBoxLayout">
				<property name="orientation">vertical</property>
			</object>
		</property>
    <child>
      <object class="GtkBox" id="container">
        <property name="orientation">vertical</property>
        <property name="margin-start">16</property>
        <property name="margin-end">16</property>
        <property name="margin-top">16</property>
        <property name="margin-bottom">16</property>
        <child>
          <object class="GtkLabel">
            <property name="label" bind-source="IcoMainPanelView" bind-property="setName" bind-flags="sync-create" />
            <property name="halign">1</property>
            <style>
              <class name="title-1"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label" bind-source="IcoMainPanelView" bind-property="iconsCount" bind-flags="sync-create" />
            <property name="halign">1</property>
            <style>
              <class name="opacity-7"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label">MIT licence</property>
            <property name="halign">1</property>
            <style>
              <class name="opacity-7"/>
  		          <class name="mb-8"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkGridView">
            <property name="model">
              <object class="GtkSingleSelection">
                <property name="model" bind-source="IcoMainPanelView" bind-property="icons"/>
              </object>
            </property>
            <property name="factory">
              <object class="GtkBuilderListItemFactory">
			          <property name="resource">/com/github/azuredusk10/IconManager/ui/IconListItem.ui</property>
		          </object>
            </property>
          </object>
          <!-- <object class="GtkFlowBox" id="iconsFlowbox">
            <property name="orientation">0</property>
            <property name="row-spacing">6</property>
            <property name="column-spacing">6</property>
            <property name="homogeneous">false</property>
            <property name="max-children-per-line">-1</property>
            <property name="min-children-per-line">1</property>
            <property name="selection-mode">single</property>
            <property name="vexpand">0</property>
            <signal name="child-activated" handler="onIconActivated"/>
          </object> -->
        </child>
      </object>
    </child>
  </template>
</interface>
